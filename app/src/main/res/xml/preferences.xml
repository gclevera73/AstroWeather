<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:textSize="30sp"
        android:title="Ustawienia położenia">

    </PreferenceCategory>
    <EditTextPreference
        android:defaultValue="LODZ, PL"
        android:inputType="text"
        android:key="lokalizacja"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Lokalizacja" />
    <PreferenceCategory
        android:textSize="30sp"
        android:title="Ustawienia jednostek">


    </PreferenceCategory>
    <ListPreference
        android:key="temperature"
        android:title="Temperatura - jednostka"
        android:entries="@array/temperatureUnitsName"
        android:entryValues="@array/temperatureUnitsValues"
        android:defaultValue="C"
        android:summary="%s"/>
</PreferenceScreen>