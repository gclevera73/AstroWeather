<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/sila_wiatru"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#868192" />

    <TextView
        android:id="@+id/kierunek_wiatru"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#868192" />

    <TextView
        android:id="@+id/wilgotnosc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#868192" />

    <TextView
        android:id="@+id/pressure_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF868192" />

    <TextView
        android:id="@+id/odswiez"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/updated_field"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Odśwież"
        android:textColor="#4CAF50"
        android:textSize="12sp"
        android:textStyle="italic" />
</LinearLayout>